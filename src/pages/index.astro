  <body class="bg-[#fafafa] text-[#111] antialiased">
    <main class="mx-auto max-w-[720px] px-5 pb-16 pt-12">
      <header class="mb-8 flex items-end justify-between gap-4 border-b border-zinc-200 pb-4">
        <div>
          <h1 class="text-[20px] font-semibold leading-[1.35] tracking-[-0.01em]">Ripple</h1>
          <p class="mt-1 text-[13px] leading-[1.6] text-[#666]">Signals for AI builders</p>
        </div>

        <nav class="flex items-center gap-4 text-[13px] text-[#666]">
          <a href="#" class="transition hover:text-[#2f5fbf] hover:underline">About</a>
          <a href="#" class="transition hover:text-[#2f5fbf] hover:underline">GitHub</a>
        </nav>
      </header>

      <section>
        <table class="w-full border-separate border-spacing-0">
          <thead>
            <tr>
              <th class="w-12 border-b border-zinc-200 py-2 text-left text-[13px] font-normal text-[#666]">#</th>
              <th class="border-b border-zinc-200 py-2 text-left text-[13px] font-normal text-[#666]">Title</th>
              <th class="w-28 border-b border-zinc-200 py-2 text-right text-[13px] font-normal text-[#666]">Published</th>
            </tr>
          </thead>

          <tbody>
            {signals.map((s) => (
              <tr>
                <td class="border-b border-zinc-100 py-3 pr-2 align-top text-[13px] leading-[1.6] text-[#666]">{s.rank}</td>

                <td class="border-b border-zinc-100 py-3 pr-3 align-top">
                  <a
                    href={s.url}
                    target="_blank"
                    class="text-[18px] font-semibold leading-[1.35] tracking-[-0.01em] text-[#111] transition hover:text-[#2f5fbf] hover:underline"
                  >
                    {s.title}
                  </a>
                </td>

                <td class="border-b border-zinc-100 py-3 text-right align-top text-[13px] leading-[1.6] text-[#666] tabular-nums">
                  {s.publishedAt}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </section>

