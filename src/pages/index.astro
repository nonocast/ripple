---
const signals = [
  {
    title: "Claude Code: Skills vs Tools",
    source: "YouTube",
    tag: "Agents",
    time: "2h ago",
    score: 92,
    url: "https://example.com",
  },
  {
    title: "Gemini 1.5 Web Design in AI Studio",
    source: "TikTok",
    tag: "Design",
    time: "6h ago",
    score: 81,
    url: "https://example.com",
  },
  {
    title: "xbench: Agent benchmark as a product",
    source: "HN",
    tag: "Benchmark",
    time: "1d ago",
    score: 77,
    url: "https://example.com",
  },
  {
    title: "Local-first notes apps: Granola / Jamie patterns",
    source: "Blog",
    tag: "Local-first",
    time: "2d ago",
    score: 74,
    url: "https://example.com",
  },
];
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ripple</title>
    <meta name="description" content="Signal surface for AI builders" />
    <style>
      :root{
        --bg:#ffffff;
        --fg:#0b0f18;
        --muted:#5b6472;
        --line:rgba(15, 23, 42, .08);
        --chip:rgba(15, 23, 42, .06);
        --shadow: 0 1px 0 rgba(15,23,42,.06);
        --radius:16px;
      }
      @media (prefers-color-scheme: dark){
        :root{
          --bg:#0b0f18;
          --fg:#eef2ff;
          --muted:#9aa4b2;
          --line:rgba(226, 232, 240, .10);
          --chip:rgba(226, 232, 240, .10);
          --shadow: 0 1px 0 rgba(226,232,240,.08);
        }
      }

      *{ box-sizing:border-box; }
      body{
        margin:0;
        background:var(--bg);
        color:var(--fg);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
      }

      .wrap{ max-width: 1080px; margin: 0 auto; padding: 40px 20px 80px; }
      header{ display:flex; align-items:flex-end; justify-content:space-between; gap:16px; margin-bottom: 22px; }
      .brand{ display:flex; flex-direction:column; gap:6px; }
      .brand h1{ margin:0; font-size:22px; letter-spacing:-0.02em; }
      .brand p{ margin:0; color:var(--muted); font-size:13px; }

      .controls{ display:flex; gap:10px; align-items:center; }
      .search{
        width: 320px;
        max-width: 55vw;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--line);
        background: transparent;
        color: var(--fg);
        outline: none;
      }
      .search::placeholder{ color: color-mix(in srgb, var(--muted) 80%, transparent); }

      .card{
        border:1px solid var(--line);
        border-radius: var(--radius);
        overflow:hidden;
        box-shadow: var(--shadow);
      }

      table{ width:100%; border-collapse:separate; border-spacing:0; }
      thead th{
        text-align:left;
        font-size:12px;
        font-weight:600;
        color:var(--muted);
        padding: 12px 16px;
        border-bottom:1px solid var(--line);
        background: color-mix(in srgb, var(--bg) 92%, var(--fg) 8%);
      }
      tbody td{
        padding: 14px 16px;
        border-bottom:1px solid var(--line);
        vertical-align:middle;
        font-size:14px;
      }
      tbody tr:hover{
        background: color-mix(in srgb, var(--bg) 92%, var(--fg) 8%);
      }
      tbody tr:last-child td{ border-bottom:none; }

      a.title{
        color:var(--fg);
        text-decoration:none;
        font-weight:600;
        letter-spacing:-0.01em;
      }
      a.title:hover{ text-decoration:underline; }

      .meta{ display:flex; gap:10px; align-items:center; flex-wrap:wrap; margin-top:6px; }
      .chip{
        display:inline-flex;
        align-items:center;
        padding: 4px 10px;
        border-radius: 999px;
        background: var(--chip);
        color: var(--muted);
        font-size: 12px;
        line-height: 1;
      }
      .score{
        font-variant-numeric: tabular-nums;
        font-weight: 700;
        letter-spacing:-0.01em;
      }

      /* mobile: table -> cards */
      @media (max-width: 720px){
        thead{ display:none; }
        table, tbody, tr, td{ display:block; width:100%; }
        tbody td{ border-bottom:none; padding: 14px 16px; }
        tbody tr{ border-bottom:1px solid var(--line); }
        tbody tr:last-child{ border-bottom:none; }
        .row{ display:flex; justify-content:space-between; gap:12px; align-items:flex-start; }
        .right{ text-align:right; min-width:72px; }
        .search{ width: 220px; }
      }

      footer{
        margin-top: 18px;
        color: var(--muted);
        font-size: 12px;
        display:flex;
        justify-content:space-between;
        gap: 12px;
        flex-wrap:wrap;
      }
      .kbd{ border:1px solid var(--line); padding:2px 6px; border-radius:8px; font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header>
        <div class="brand">
          <h1>Ripple</h1>
          <p>Signal surface for AI builders</p>
        </div>

        <div class="controls">
          <input class="search" placeholder="Search signals…" />
        </div>
      </header>

      <div class="card">
        <table>
          <thead>
            <tr>
              <th style="width:64%;">Signal</th>
              <th style="width:14%;">Tag</th>
              <th style="width:12%;">Time</th>
              <th style="width:10%; text-align:right;">Score</th>
            </tr>
          </thead>

          <tbody>
            {signals.map((s) => (
              <tr>
                <td>
                  <a class="title" href={s.url} target="_blank" rel="noreferrer">
                    {s.title}
                  </a>
                  <div class="meta">
                    <span class="chip">{s.source}</span>
                  </div>
                </td>

                <td><span class="chip">{s.tag}</span></td>
                <td><span class="chip">{s.time}</span></td>
                <td style="text-align:right;">
                  <span class="score">{s.score}</span>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <footer>
        <div>© {new Date().getFullYear()} Ripple</div>
        <div>Tip: press <span class="kbd">/</span> to focus search (next step)</div>
      </footer>
    </div>
</body>
</html>
